package com.shinhan.day02;

public class IFTest {

	public static void main(String[] args) {
		mathod3();
	}

	private static void mathod3() {
		int score = 80;
		String grade;
		
		//break는 switch 빠지기, break가 없으면 무조건 아래로 흐른다.
		switch(score/10) {
		case 10:
		case 9: grade = "A"; break;
		case 8: grade = "B"; break;
		case 7: grade = "C"; break;
		case 6: grade = "D"; break;
		default : grade = "F";
		}
		System.out.printf("%s 학점 !!!\n", grade);
		System.out.println("===switch end===");
	}

	private static void mathod2() {
		int score = 80;
		String grade;
		
		//if문이 길때에는 Swich문장이 더 좋음
		if(score >= 90) {
			grade = "A";
		} else if(score >= 80) {
			grade = "B";
		} else if(score >= 70) {
			grade = "C";
		} else if(score >= 60) {
			grade = "D";
		} else {
			grade = "F";
		}
		System.out.printf("%s 학점 !!\n", grade);
		System.out.println("===========");
	}

	private static void mathod1() {
		int score = 100;
		// 출력 문장이 하나만 있을 때에는 block({ }) 없어도 가능
		if (score >= 90) {
			System.out.println("합격");
		} else {
			System.out.println("불합격");
		}
		System.out.println("if끝");
	}

}
