package com.shinhan.day05.test;

import java.util.Scanner;

public class BankApplication {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		boolean isGo = True;
		
		Account[] arr = new Account[5];
		int index = 0;
		
		while(isGo) {
			menuPrint();
			System.out.print("선택>");
			int job = sc.nextInt();
			switch(job) {
			case 1 :
				menuPrint2("계좌생성");
				
				if(index == arr.length) {
					System.out.println("더이상 계좌생성 불가"); break;	
					
				System.out.println("계좌번호");
				int accNo = sc.nextInt();
				
				System.out.println("계좌주");
				int owner = sc.nextInt();
				
				System.out.println("초기입금액");
				int balance = sc.nextInt();
				
				}
				arr[index++] = new Account(accNo, owner, balance); break;
				
			case 2 :
				menuPrint2("계좌목록");
				for(Account acc : arr) {
					System.out.printf("%10s %10s %10d",
							acc.accNo, acc.owner, acc.balance);
			}
				break;
		}
		sc.close();
	}

		
	private static void menuPrint2(String title) {
		System.out.println("------");
		System.out.println(title);
		System.out.println("------");
	}

	void menuPrint() {
		System.out.println("-----------------------------------");
		System.out.println("1.계좌생성|2.계좌목록|3.예금|4.출금|5.종료");
		System.out.println("-----------------------------------");
		
	}
}
