		Scanner sc;
		sc = new Scanner(System.in);
		
		System.out.println("양의 정수를 입력하세요 :");
		int num = sc.nextInt();
		
		int cnt = 0;
		int sum = 0;
		
		for(int i=1 ; i<=1000 ; i+=7) {
			num/
		}
	}

}
