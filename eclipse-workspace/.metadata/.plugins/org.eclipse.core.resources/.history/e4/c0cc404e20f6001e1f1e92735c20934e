package perfornance_evaluation;

import java.util.Scanner;

public class EmpController {

	static Scanner sc = new Scanner(System.in);
	static EmpService empService = new EmpService();

	public static void main(String[] args) {

		boolean isStop = false;

		while (!isStop) {
			int selectJob = menuDisplay();

			switch (selectJob) {
			case 1 -> {
				System.out.println("----ID와 PW를 입력해 주세요----");
				System.out.print("ID : ");
				int adminid = sc.nextInt();
				System.out.print("PW : ");
				int emppw = sc.nextInt();

				boolean loginSuccess = login(sc, empService, adminid, emppw);
				if (loginSuccess) {
				    // 로그인 성공한 경우의 처리
				} else {
				    // 로그인 실패한 경우의 처리
				}


			}

			case 2 -> {
				System.out.println("--------사원 로그인---------");
				System.out.println("----ID와 PW를 입력해 주세요----");
				System.out.print("ID : ");
				int empid = sc.nextInt();
				System.out.print("PW : ");
				String emppw = sc.next();
				boolean loginSuccess = emplogin(sc, empService, empid, emppw);
				if (loginSuccess) {
				    // 로그인 성공한 경우의 처리
				} else {
				    // 로그인 실패한 경우의 처리
				}
			}

			case 3 -> {
				isStop = true;
			}

			default -> {
			}

			}
			System.out.println("-------인사평가 프로그램을 종료합니다------");
		}
	}

	private static int menuDisplay() {
		System.out.println("----------[신한DS 인사평가]----------");
		System.out.println("---------서비스를 선택해주세요---------");
		System.out.println("1.관리자 로그인 | 2.사원 로그인 | 3. 종료");
		System.out.println("----------------------------------");
		System.out.print("작업선택 > ");
		int job = sc.nextInt();
		return job;
	}
	
	//login
	public static boolean login(Scanner sc, EmpService empService, int adminid, int emppw) {
		int count = 0;
		boolean loginSuccess = false;
		while (count < 3) {
			int select = empService.selectAdminLog(adminid, emppw);
			if (select == 1) {
				System.out.println("-------로그인 성공-------");
				loginSuccess = true;
				break;
			} else {
				count++;
				System.out.printf("남은 로그인 기회 : %d\n", 3 - count);
				System.out.println("----ID와 PW를 입력해 주세요----");
				System.out.print("ID : ");
				adminid = sc.nextInt();
				System.out.print("PW : ");
				emppw = sc.nextInt();
			}
		}
		if (!loginSuccess) {
			System.out.println("로그인 실패: 로그인 기회를 모두 사용하셨습니다.");
		}
		return loginSuccess;
	}
	
	//emplogin
	private static boolean emplogin(Scanner sc, EmpService empService, int empid, int emppw) {
		int count = 0;
		boolean loginSuccess = false;
		while (count < 3) {
			int select = empService.selectEmpLog(empid, emppw);
			if (select == 1) {
				System.out.println("-------로그인 성공-------");
				loginSuccess = true;
				break;
			} else {
				count++;
				System.out.printf("남은 로그인 기회 : %d\n", 3 - count);
				System.out.println("----ID와 PW를 입력해 주세요----");
				System.out.print("ID : ");
				empid = sc.nextInt();
				System.out.print("PW : ");
				emppw = sc.nextInt();
			}
		}
		if (!loginSuccess) {
			System.out.println("로그인 실패: 로그인 기회를 모두 사용하셨습니다.");
		}
		return loginSuccess;
	}

}
